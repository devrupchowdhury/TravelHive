<% layout("/layouts/boilerplate") %>
 
<div class="container my-5">
    <h3 class="text-center mb-4">Listing Details</h3>
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card  mb-4">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Image of <%= listing.title %>">
                <div class="card-body">
                    <h5 class="card-title text-primary"><%= listing.title %></h5>
                    <p class="card-text text-muted"> <%= listing.description %> </p>
                    <p class="card-text fw-bold">Price: &#8377; <%= listing.price.toLocaleString('en-IN') %></p>
                    <p class="card-text"><i class="bi bi-geo-alt"></i> Location: <%= listing.location %></p>
                    <p class="card-text">Country: <%= listing.country %></p>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit this listing
                </a>

                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete this listing
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
