<% layout("/layouts/boilerplate") %>
 <div class="row">
 <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
        <div class="mb3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]"  class="form-control"  value ="<%= listing.title %>"  required>
        <div class="valid-feedback">
            Title looks good 
        </div>
        </div>
        <div class="mb3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Please give description 
               </div>
        </div>
        <div class="mb3">
        <label for="image" class="form-label" >Image-url</label>
        <input type="text" name="listing[image][url]"  class="form-control" value ="<%= listing.image.url %>" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <div class="mb3">
                <label for="price" class="form-label"  >Price</label>
                <input type="number" name="listing[price]" class="form-control"  value ="<%= listing.price %>" required>
                <div class="invalid-feedback">
                    Please enter valid price
                   </div>
                </div>
            </div>

            <div class="mb-3 col-md-8 ">
                <div class="mb3">
                    <label for="Country" class="form-label">Country</label>
                    <input type="text" name="listing[country]"  class="form-control" value ="<%= listing.country %>" required>
                    <div class="invalid-feedback">
                        Please enter valid country
                     </div>
                </div>
            </div>
            
        
        </div>
        
        <div class="mb3">
        <label for="location" class="form-label" >Location</label>
        <input type="text" name="listing[location]" class="form-control" value ="<%= listing.location%>" required>
        <div class="invalid-feedback">
            Please enter valid location
         </div>
        </div>
        
        <br>
        <div class="mb-3">
            <button type="submit"  class="btn btn-primary btn-red" >Edit</button>
        </div>
    </form>
    </div>
    </div>

